		"react-dom": "^15.3"
	},
	"devDependencies": {
		"@types/classnames": "^0.0.30",
		"@types/chai": "^3.4",
		"@types/enzyme": "^2.4",
		"@types/mocha": "^2.2",
		"@types/node": "^6.0",
		"@types/node-sass": "^0.0.29",
		"@types/react": "^0.14",
		"@types/react-dom": "^0.14",
		"@types/webpack": "^1.12",
		"chai": "^3.5",
		"classnames": "^2.2",
		"css-loader": "^0.25",
		"css-modules-require-hook": "^4.0",
		"enzyme": "^2.4",
		"extract-text-webpack-plugin": "^2.0.0-beta.4",
		"mocha": "^3.1",
		"node-sass": "^3.10",
		"react-addons-test-utils": "^15.3",
		"react-static-webpack-plugin": "^1.2",
		"sass-loader": "^4.0",
		"style-loader": "0.13",
		"ts-loader": "^0.8",
		"ts-node": "^1.3",
		"typescript": "^2.0",
		"webpack": "^2.1.0-beta.25",
		"webpack-dashboard": "^0.2",
		"webpack-dev-server": "^2.1.0-beta.8"

	},
	"scripts": {
		"test": "npm run test:mocha",
		"test:mocha": "NODE_ENV=testing NODE_PATH=. ./node_modules/.bin/mocha ./tests/**/* --opts ./.mocha.opts",
		"start": "npm run start:dashboard -- npm run start:server",
		"start:dashboard": "./node_modules/.bin/webpack-dashboard",
		"start:server": "./node_modules/.bin/webpack-dev-server --config .webpack.ts",
		"build": "npm run build:prepare && npm run build:webpack && npm run build:static && npm run build:finalize",
		"build:prepare": "rm -rf ./built ./.tmp; mkdir ./built",
		"build:static": "cp -r -n ./static/. ./.tmp; exit 0",
		"build:webpack": "./node_modules/.bin/webpack --config .webpack.ts --progress -d",
		"build:finalize": "cp -r ./.tmp/. ./built; rm -rf ./.tmp; rm -rf ./built/browser.js",
		"compile": "npm run build:prepare && npm run compile:webpack && npm run build:static && npm run build:finalize",
		"compile:webpack": "./node_modules/.bin/webpack --config .webpack.ts --progress -p"
	}
}
